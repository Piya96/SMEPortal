@using SME.Portal.SmeDocuments;



<h4 class="mb-10 font-weight-bold text-dark">Confirmation of Turnover</h4>

<div class="alert alert-custom alert-notice alert-light-success fade show mb-5" role="alert">
    <div class="alert-icon">
        <i class="flaticon-warning"></i>
    </div>
    <div class="alert-text">
        <p>Funders require confirmation of your annual turnover before matching.</p>

        <p>Please upload your CIPC Annual Return or a letter from your Accountant to confirm your turnover.</p>
    </div>
</div>


<div class="card card-custom gutter-b">
    @* Mandetory Document Upload *@
    @* CIPC Annual Return *@
    <form class="form fv-plugins-bootstrap fv-plugins-framework" id="kt_form_documents">
        <div id="company-registration-documents" class="form-group">
            <div id="id-step-5-messages">
                <span class="dropzone-msg-desc">CIPC Annual Return or Letter from your Accountant</span>
            </div>

            <div name="validate-confirmation-of-turnover" class="form-group fv-plugins-icon-container">
                <div class="card-body">
                    <div class="form-group row">

                        <div class="col-lg-9 col-md-9 col-sm-12">
                            <div class="dropzone dropzone-default dropzone-success dz-clickable" id="cipc-annual-return-dropzone">
                                @Html.Hidden("DocumentTypeCIPCAnnualReturn", DocumentTypes.CipcAnnualReturn)
                                <div class="dropzone-msg dz-message needsclick">
                                    <h3 class="dropzone-msg-title">Click here to browse and once you have found your document, click the UPLOAD button</h3>
                                    <span class="dropzone-msg-desc">Only pdf files are allowed for upload</span>
                                </div>
                            </div>
                        </div>
                        <button id="cipc-annual-return-submit" type="submit" class="btn btn-light-primary mr-2">UPLOAD</button>
                    </div>

                    <div class="form-group row">
                        <div class="col-lg-9 col-md-9 col-sm-12">
                            <div id="validate-confirmation-of-turnover-error"></div>
                            <div id="validate-confirmation-of-turnover-is-valid" style="display:none"></div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </form>

</div>




