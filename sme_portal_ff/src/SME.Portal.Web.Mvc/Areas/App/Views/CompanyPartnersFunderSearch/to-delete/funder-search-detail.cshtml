    <script>
        function actionCallback(action, output) {
            let appId = output.id;
            if (action == 'Reload') {
                if (output.view == 'Index') {
                    location.href = '@Url.Action("Index", "CompanyPartnersFunderSearch")?reload=' + false;
                } else {
                    location.href = '@Url.Action("Detail", "CompanyPartnersFunderSearch")?id=' + appId + '&reload=' + false;
                }
            }
        }

        $(document).ready(function () {
            let matchPolling = new SMEMatchPolling(actionCallback, '@Model.Reload', '@Model.View');
            app.wizard.isb.init(null, null, null);
            let helpers = app.onboard.helpers.get();
            let json = @Html.Raw(Json.Serialize(Model));
            for(const o in json.applicationProperties) {
                app.fss.user.render(json.settings, o);
                app.fss.owner.render(json.owners[o].owner, o);
                app.fss.company.render(json.companies[o].smeCompany, o);
                let dto = helpers.nvpArrayToObject(json.applicationProperties[o]);
                app.wizard.fundingRequirements.summary.render(dto, o);
                app.wizard.companyInfo.summary.render(dto, o);
                app.wizard.financialInfo.summary.render(dto, o);
                app.wizard.lenderDocuments.summary.render(dto, o);
                app.wizard.keyThings.summary.render(dto, o);
            }

            $('#download-credit-report-id').on('click', function () {
                app.consumerCredit.loadDetail();
                app.consumerCredit.downloadCreditReport(function (status) {

                });
            });

            $('#redirect-to-consumer-credit-id').on('click', function () {
                location.href = '@Url.Action("Index", "ConsumerCredit")';
            });

            window.setTimeout(function () {
                $('#id-funder-search-matches-detail-div').fadeIn(500, 'swing', function () {
                });
            }, 10);
        });
