@using SME.Portal.Web.Areas.App.Models.FinanceProducts
@model ManageFinanceProductViewModel

@if (Model.ResearchUrls?.Any() ?? false)
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>URL</th>
                <th style="width: 80px;"></th>
            </tr>
        </thead>
        <tbody id="ResearchUrlBody">
            @foreach (var researchUrl in Model.ResearchUrls)
            {
                <tr>
                    <td><a href='@researchUrl.Url' target="_blank">@researchUrl.Url</a></td>
                    <td>
                        <button type="button" onclick="deleteResearchUrl('@researchUrl.FinanceProductId', '@researchUrl.Id')" class="btn btn-sm btn-danger">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mb-5">No research URL's have been added.</div>
}
