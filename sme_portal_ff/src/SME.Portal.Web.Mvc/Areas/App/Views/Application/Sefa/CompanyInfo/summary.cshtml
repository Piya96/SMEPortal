                <tr><td style="@styleWidth">Contract deliverables description</td><td id="contract-deliverables-desc-@appId">Value</td></tr>
                <tr><td style="@styleWidth">Contract value</td><td id="contract-value-@appId">Value</td></tr>
                <tr><td style="@styleWidth">Contract delivery period (in months)</td><td id="contract-delivery-period-@appId">Value</td></tr>
