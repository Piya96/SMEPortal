@using SME.Portal.Authorization
@using SME.Portal.Web.Areas.App.Models.OwnerCompanyMapping
@using SME.Portal.Web.Areas.App.Startup
@model OwnerCompanyMappingViewModel
@{
    ViewBag.CurrentPageName = AppPageNames.Tenant.OwnerCompanyMapping;
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/App/Views/OwnerCompanyMapping/Index.js" asp-append-version="true"></script>
}

<div class="content d-flex flex-column flex-column-fluid">

                <abp-page-subheader title="@L("OwnerCompanyMapping")" description="@L("OwnerCompanyMappingHeaderInfo")">
                     <button id="ExportToExcelButton" class="btn btn-outline-success"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>
            
                     @if (IsGranted(AppPermissions.Pages_Administration_OwnerCompanyMapping_Create))
                     {
                         <button id="CreateNewOwnerCompanyMapButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewOwnerCompanyMap")</button>                
                     }
                </abp-page-subheader>
            
<div class="@(await GetContainerClass())">   
    <div class="card card-custom gutter-b">
        <div class="card-body">
            <div class="form">
                <div class="row align-items-center mb-4">
                    <div class="col-xl-12">
                        <div class="form-group align-items-center">
                            <div class="input-group">
                                <input type="text" id="OwnerCompanyMappingTableFilter" class="form-control m-input" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
                                <span class="input-group-btn">
                                    <button id="GetOwnerCompanyMappingButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
			</div>
                <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                    <div class="col-md-12">
						<div class="kt-separator kt-separator--border-dashed"></div>
					</div>

							<div class="col-md-3">
								<label for="IsPrimaryOwnerFilterId">@L("IsPrimaryOwner")</label>
								<select class="form-control" name="IsPrimaryOwnerFilter" id="IsPrimaryOwnerFilterId">
									<option value="-1">@L("All")</option>
									<option value="0">@L("False")</option>
									<option value="1">@L("True")</option>
								</select>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="OwnerIdentityOrPassportFilterId">(@L("Owner")) @L("IdentityOrPassport")</label>
									<input type="text" class="form-control" name="ownerIdentityOrPassportFilter" id="OwnerIdentityOrPassportFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="SmeCompanyRegistrationNumberFilterId">(@L("SmeCompany")) @L("RegistrationNumber")</label>
									<input type="text" class="form-control" name="smeCompanyRegistrationNumberFilter" id="SmeCompanyRegistrationNumberFilterId">
								</div>
                            </div>
                </div>
                <div class="row mb-4">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
            <div class="row align-items-center">
                <table id="OwnerCompanyMappingTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th></th>
                            
                            <th>@L("Actions")</th>
								<th>@L("IsPrimaryOwner")</th>
								<th>@L("OwnerIdentityOrPassport")</th>
								<th>@L("SmeCompanyRegistrationNumber")</th>
                            
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
  </div>
</div>