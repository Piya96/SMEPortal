@using SME.Portal.List;


@model ListItem

<div class="row">
    <div class="col-12">
        <div class="card-body">
            <div class="form-group row">
                <div class="col-lg-9 col-md-9 col-sm-12">
                    <h2>@Model.Name</h2>
                    <div class="dropzone dropzone-default dropzone-success dz-clickable" id="dropzone">
                        @Html.Hidden("DocumentType", Model.Id)
                        <div class="dropzone-msg dz-message needsclick">
                            <h3 class="dropzone-msg-title">Drop files here or click to upload.</h3>
                            <span class="dropzone-msg-desc">Only pdf files are allowed for upload</span>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-light-primary mr-2">Upload</button>
            </div>
        </div>
    </div>
</div>