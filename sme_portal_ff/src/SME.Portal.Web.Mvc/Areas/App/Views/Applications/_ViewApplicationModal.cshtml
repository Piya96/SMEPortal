
@using SME.Portal.Web.Areas.App.Models.Common.Modals
@using SME.Portal.Web.Areas.App.Models.Applications
@model ApplicationViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("ApplicationDetails")))

<div class="modal-body">
    <div id="ApplicationInformationsTab">
        
        <div class="row">
            <div class="col-6 mb-3">
                <h6>(@L("SMECompany")) @L("Name") :</h6>
                @Model.SmeCompanyName
            </div>

            <div class="col-6 mb-3">
                <h6>(@L("User")) @L("Name") :</h6>
                @Model.UserName
            </div>

            <div class="col-6 mb-3">
                <h6>@L("Status") :</h6>
                @Model.Application.Status
            </div>

            <div class="col-6 mb-3">
                <h6>@L("Locked") :</h6>
                @Model.Application.Locked
            </div>

        </div>

    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithClose.cshtml")

