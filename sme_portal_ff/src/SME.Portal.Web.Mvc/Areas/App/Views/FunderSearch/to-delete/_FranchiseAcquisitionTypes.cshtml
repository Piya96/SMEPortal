@* ---------------Franchise Acquisition Partner Funding -- *@
<div id="franchise-acquisition-partner-funding-type" style="display:none">
    <div class="form-group">
        <label class="font-weight-bold text-dark" for="asset-finance">Partner Buy-out or Franchise Funding Options</label>
        <select class="form-control" id="franchise-acquisition-partner-funding-type" name="franchiseacquisitiontype">
            <option disabled selected value="">@L("SelectAnOption")</option>
            <option value="59c2c7087c83b736d463c255">Buying a franchise</option>
            <option value="59d26a3120070a604097b04f">Funding to bring on a BEE Partner</option>
            <option value="59d26a1620070a604097b04d">Funding to buy an existing business</option>
            <option value="59d26a2620070a604097b04e">Partner or management buyout</option>
            <option value="59c2c7197c83b736d463c256">Starting your own franchise</option>
        </select>
        <span class="form-text text-muted"></span>
    </div>
</div>

@* Buying a franchise  *@
<div id="franchise-acquisition-buying-a-franchise" style="display:none">
    <div class="form-group">
        <label class="font-weight-bold text-dark" for="" style="width:80%;">@L("IsFranchiseAccreditedWithFranchiseAssoc")</label>
        <div class="input-group mb-2 mb-sm-0 float-right" style="width: 110px;">
            <div class="radio-inline">
                <label class="radio radio-outline radio-primary">
                    <input type="radio" name="buyingafranchisefranchiseaccredited" value="Yes" />
                    <span></span>
                    @L("Yes")
                </label>
                <label class="radio radio-outline radio-primary">
                    <input type="radio" name="buyingafranchisefranchiseaccredited" value="No" />
                    <span></span>
                    @L("No")
                </label>

            </div>
        </div>
        <span class="form-text text-muted">@L("IsFranchiseAccreditedWithFranchiseAssocSubtext")</span>
    </div>
    <div class="form-group">
        <label class="font-weight-bold text-dark" for="" style="width:80%;">@L("HaveYouBeenPreapprovedByFranchisor")</label>
        <div class="input-group mb-2 mb-sm-0 float-right" style="width: 110px;">
            <div class="radio-inline">
                <label class="radio radio-outline radio-primary">
                    <input type="radio" name="preapprovedbyfranchisor" value="Yes" />
                    <span></span>
                    @L("Yes")
                </label>
                <label class="radio radio-outline radio-primary">
                    <input type="radio" name="preapprovedbyfranchisor" value="No" />
                    <span></span>
                    @L("No")
                </label>

            </div>
        </div>
        <span class="form-text text-muted">@L("HaveYouBeenPreapprovedByFranchisorSubtext")</span>
    </div>
</div>

