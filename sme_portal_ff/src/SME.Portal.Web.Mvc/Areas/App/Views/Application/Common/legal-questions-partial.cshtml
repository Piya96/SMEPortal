<div id="div-method-of-repayment-ext">
<br/>
    @{ await Html.RenderPartialAsync(
        "/Areas/App/Views/Common/Html/select-picker-n-lt-rt.cshtml",
        new Select_N_LT_RT()
        {
            Name = "method-of-repayment",
            Label = "What method will you use to do your repayments?"
