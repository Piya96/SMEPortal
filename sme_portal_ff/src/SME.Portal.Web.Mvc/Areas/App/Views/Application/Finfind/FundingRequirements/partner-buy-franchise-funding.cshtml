@using SME.Portal.Web.Areas.App.Models.Common.Partial;

@* ---------------Franchise Acquisition Partner Funding -- *@
<div id="div-franchise-acquisition-partner-funding-type" style="display:none">
    <div class="form-group">
        <label class="font-weight-bold text-dark" for="franchiseacquisitiontype">Partner Buy-out or Franchise Funding Options</label>
        <select class="form-control" id="franchiseacquisitiontype" name="franchiseacquisitiontype">
            <option disabled selected hidden value="">@L("SelectAnOption")</option>
            <option value="59c2c7087c83b736d463c255">Buying a franchise</option>
            <option value="59d26a3120070a604097b04f">Funding to bring on a BEE Partner</option>
            <option value="59d26a1620070a604097b04d">Funding to buy an existing business</option>
            <option value="59d26a2620070a604097b04e">Partner or management buyout</option>
            <option value="59c2c7197c83b736d463c256">Starting your own franchise</option>
        </select>
        <span class="form-text text-muted"></span>
    </div>
</div>

@* Buying a franchise  *@
