@using SME.Portal.Web.Areas.App.Models.Common.ListItems;

@model ListItemsViewModel

<environment include="Development">
    <script src="~/view-resources/Areas/App/Views/common/industry-sectors.v7.js" asp-append-version="true"></script>
    <script src="~/view-resources/Areas/App/Views/common/industry-sub-sectors.v7.js" asp-append-version="true"></script>
    <script src="~/view-resources/Areas/App/Views/FunderSearchSummary/_ListItems.js" asp-append-version="true"></script>
</environment>

<environment include="Production, Staging">
    <script src="~/view-resources/Areas/App/Views/common/industry-sectors.v7.min.js" asp-append-version="true"></script>
    <script src="~/view-resources/Areas/App/Views/common/industry-sub-sectors.v7.min.js" asp-append-version="true"></script>
    <script src="~/view-resources/Areas/App/Views/FunderSearchSummary/_ListItems.min.js" asp-append-version="true"></script>
</environment>

<script>
    let model = @Html.Raw(Json.Serialize(Model));
    app.listItems.create(model.tenant);
    app.listItems.obj.init(model.listItems);
    app.common.industrySector.init();
</script>
