@using SME.Portal.Web.Areas.App.Models.SME;
@model SMEOnboardingWizardViewModel

@if (!string.IsNullOrEmpty(Model.UserMessage))
{
    <div class="alert alert-custom alert-outline-2x alert-outline-primary fade show mb-5" role="alert">
        <div class="alert-icon"><i class="flaticon-warning"></i></div>
        <div class="alert-text">@Model.UserMessage</div>
        <div class="alert-close">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true"><i class="ki ki-close"></i></span>
            </button>
        </div>
    </div>
}

@{ await Html.RenderPartialAsync("../Common/_TopNav.cshtml", 2); }
<br />

<div class="card card-custom gutter-b">
    <div class="card card-custom">
        <div class="card-body">


            @* Onboarding Wizard *@
            <div class="wizard wizard-2" id="kt_wizard_v2" data-wizard-state="first" data-wizard-clickable="false">

                <div class="wizard-nav border-right py-8 px-8 py-lg-20 px-lg-10">

                    <div class="wizard-steps">
                        @{
                            await Html.RenderPartialAsync("onboard-steps.cshtml");
                        }
                    </div>

                    <div><br /></div>
                    <div class="alert alert-custom alert-outline-primary fade show mb-5" role="alert">
                        <div class="alert-icon"><i class="flaticon-information"></i></div>
                        <div class="alert-text"><p>Please complete your User, Owner and Business Profiles, in order to proceed to the Find Your Funder&trade; search.</p></div>
                        <div class="alert-close">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true"><i class="ki ki-close"></i></span>
                            </button>
                        </div>
                    </div>

                </div>

                <div id="id-onboarding-div" class="wizard-body py-8 px-8 py-lg-20 px-lg-10">

                    <div class="row">
                        <div class="offset-xxl-2 col-xxl-8">
                            <form autocomplete="off" class="form fv-plugins-bootstrap fv-plugins-framework" id="kt_form">
                                <input autocomplete="false" name="hidden" type="text" style="display:none;">

                                <!--<div class="pb-5" data-wizard-type="step-content" data-wizard-state="current">

                                    @{
                                        await Html.RenderPartialAsync("intro.cshtml");
                                    }
                                </div>-->

                                <div class="pb-5" data-wizard-type="step-content" data-wizard-state="current">

                                    @{
                                        await Html.RenderPartialAsync("user-profile.cshtml");
                                    }
                                </div>

                                <div class="pb-5" data-wizard-type="step-content">
                                    @{
                                        await Html.RenderPartialAsync("owner-profile.cshtml");
                                    }
                                </div>

                                <div class="pb-5" data-wizard-type="step-content">
                                    @{
                                        await Html.RenderPartialAsync("company-profile.cshtml");
                                    }
                                </div>

                                <div class="pb-5" data-wizard-type="step-content">
                                    @{
                                        await Html.RenderPartialAsync("summary.cshtml", Model);
                                    }
                                </div>

                                <div class="d-flex justify-content-between border-top mt-5 pt-10">
                                    <div class="mr-2">
                                        <button id="Id-Form-Prev"
                                                class="btn btn-light-primary font-weight-bold text-uppercase px-9 py-4"
                                                data-wizard-type="action-prev">
                                            @L("Previous")
                                        </button>
                                    </div>
                                    <div>
                                        <button id="Id-Form-Submit"
                                                class="btn btn-primary font-weight-bold text-uppercase px-9 py-4"
                                                data-wizard-type="action-submit">
                                            @L("Next")
                                        </button>
                                        <button id="Id-Form-Next"
                                                type="button"
                                                class="btn btn-primary font-weight-bold text-uppercase px-9 py-4">
                                            @L("Next")
                                        </button>
                                        <button id="onboarding-next"
                                                style="display:none;"
                                                class="btn btn-primary font-weight-bold text-uppercase px-9 py-4"
                                                data-wizard-type="action-next">
                                            @L("Next")
                                        </button>
                                    </div>
                                </div>

                                <div></div><div></div><div></div><div></div><div></div><div></div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>