
@using SME.Portal.Web.Areas.App.Models.FunderSearch;

@model CreateEditFunderSearchViewModel

<style>
    @*
    .div-header {
        width: 100%;
        height: 200px;
        background-color: white;
    }

    .div-image {
        max-width: 100%;
        max-height: 100%;
        opacity: 1.0;
        margin: auto;
        display: block;
    }
    *@
    .wizard-steps#div-application-steps .wizard-step[data-wizard-state=current] .wizard-wrapper .wizard-icon {
        color : orange;
    }

    .wizard-steps#div-application-steps .wizard-step[data-wizard-state=pending] .wizard-wrapper .wizard-icon {
        color : orange;
    }

    .wizard-steps#div-application-steps .wizard-step[data-wizard-state=done] .wizard-wrapper .wizard-icon {
        color : orange;
    }

    .wizard-steps#div-application-steps .wizard-step[data-wizard-state="current"] {
        border-style:solid !important;
        border-width: 1px !important;
        border-color: #FFE8C4 !important;
        background-color: #FFE8C4 !important;
        margin-bottom: 4px !important;

    }

    .wizard-steps#div-application-steps .wizard-step[data-wizard-state="current"]:after {
        border-left-color: #FFE8C4 !important;
        margin-bottom: 4px !important;
    }

    .wizard-steps#div-application-steps .wizard-step[data-wizard-state="pending"] {
        background-color: white !important;
        border-color:orange !important;
        border-style:solid !important;
        border-width: 1px !important;
        margin-bottom: 4px !important;
    }

    .wizard-steps#div-application-steps .wizard-step[data-wizard-state="done"] {
        background-color: white !important;
        border-color: orange !important;
        border-style:solid !important;
        border-width: 1px !important;
        margin-bottom: 4px !important;
    }
</style>



<div class="wizard-nav border-right py-8 px-8 py-lg-20 px-lg-10">

    <div class="wizard-steps" id="div-application-steps">
        <div class="wizard-step" data-wizard-type="step" data-wizard-state="current">
            <div class="wizard-wrapper">
                <div class="wizard-icon">
                    <b class="la la-hand-o-right"></b>
                </div>
                <div class="wizard-label">
                    <h3 class="wizard-title">Information About The Process</h3>
                    <div class="wizard-desc">Explaining what happens next</div>
                </div>
            </div>
        </div>

        <div class="wizard-step" data-wizard-type="step" data-wizard-state="pending">
            <div class="wizard-wrapper">
                <div class="wizard-icon">
                    <b class="la la-hand-o-right"></b>
                </div>
                <div class="wizard-label">
                    <h3 class="wizard-title">Funding Requirement</h3>
                    <div class="wizard-desc">Info needed for your application</div>
                </div>
            </div>
        </div>

        <div class="wizard-step" data-wizard-type="step" data-wizard-state="pending">
            <div class="wizard-wrapper">
                <div class="wizard-icon">
                    <b class="la la-hand-o-right"></b>
                </div>
                <div class="wizard-label">
                    <h3 class="wizard-title">Funding Match</h3>
                    <div class="wizard-desc">Info needed for your application</div>
                </div>
            </div>
        </div>

        <div class="wizard-step" data-wizard-type="step" data-wizard-state="pending">
            <div class="wizard-wrapper">
                <div class="wizard-icon">
                    <b class="la la-hand-o-right"></b>
                </div>
                <div class="wizard-label">
                    <h3 class="wizard-title">Additional Information</h3>
                    <div class="wizard-desc">Legal and financial questions</div>
                </div>
            </div>
        </div>

        <div class="wizard-step" data-wizard-type="step" data-wizard-state="pending">
            <div class="wizard-wrapper">
                <div class="wizard-icon">
                    <b class="la la-hand-o-right"></b>
                </div>
                <div class="wizard-label">
                    <h3 class="wizard-title">Documents Required</h3>
                    <div class="wizard-desc">Document checklist and upload</div>
                </div>
            </div>
        </div>

        <div class="wizard-step" data-wizard-type="step" data-wizard-state="pending">
            <div class="wizard-wrapper">
                <div class="wizard-icon">
                    <b class="la la-hand-o-right"></b>
                </div>
                <div class="wizard-label">
                    <h3 class="wizard-title">@L("Summary")</h3>
                    <div class="wizard-desc">Review prior to submission</div>
                </div>
            </div>
        </div>

    </div>

    <div><br /></div>
    <div class="alert alert-custom alert-outline-primary fade show mb-5" role="alert">
        <!--<div class="alert-icon"><i class="flaticon-information"></i></div>-->
        <div class="alert-text">
            <ul>
                <li>Please use the enquiry number below as your reference: <b><span id="span-enquiry-no"></span></b></li>
                <li><b>Please note you have 20 work days to complete your online application from the date this enquiry number was generated (which was on <span id="application-start-date"></span>). This includes the upload of all mandatory documents on the last page. <span id="span-application-completion-time"></span></b></li>
            </ul>
        </div>
    </div>

</div>
