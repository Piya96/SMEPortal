@{ 
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <style>


        @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap');
        @@import url('https://fonts.googleapis.com/css2?family=Luckiest+Guy&display=swap');

        body {
            margin: 0px;
            padding: 0px;
            width: 100%;
            height: 100%;
            font-family: Poppins !important;
            color: #333;
        }

        .container {
            display: block;
            margin: 0px;
            padding: 0px;
            width: 100%;
            height: 100%;
            background-image: #ffffff;
            background-size: 100%;
            background-position: bottom;
            background-repeat: no-repeat;
            position: absolute;
            z-index: 0;
        }

        .content {
            display: block;
            position: relative;
            margin: 100px auto 0px auto;
            padding: 10px 30px 40px 30px;
            box-sizing: border-box;
            width: 50%;
            height: auto;
            background: transparent;
            line-height: 1em;
            text-align: center;
            color: white;
            animation-name: slidedown;
            animation-delay: 0.5s;
            animation-duration: 0.8s;
            animation-fill-mode: forwards;
            animation-timing-function: ease-in-out;
        }

        @@keyframes slidedown {
            0% {
                top: -800px
            }

            100% {
                top: 0;
            }
        }

        @@media only screen and (max-width: 700px) {
            .content {
                width: 100%;
                font-size: 80%;
                margin: 0px auto 0px auto;
                padding: 20px 80px 60px 80px;
            }
        }

        .content h1 {
            font-size: 500%;
            font-family: 'Luckiest Guy', cursive !important;
            text-align: center;
            color: #333;
        }

        @@media only screen and (max-width: 700px) {
            .content h1 {
                font-size: 400%;
            }
        }

        .content h2 {
            font-size: 300%;
            font-family: Poppins !important;
            line-height: 1.2em;
            text-align: center;
            color: #333;
        }

        .content p {
            font-size: 120%;
            font-family: Poppins !important;
            text-align: center;
            color: #333;
            line-height: 1.2em;
        }

        .content a:link, a:focus, a:hover, a:active {
            color: #333;
        }

        .button {
            text-transform: uppercase;
            text-decoration: none;
            color: #fff;
            text-align: center;
            border-radius: 50px;
            padding: 15px 60px;
            display: inline-block;
            border: 1px solid transparent;
            background-image: linear-gradient(to right,#209fd6,#21c4ae);
            font-size: 120%;
            display: inline-block;
        }

            .button:hover {
                background: #187de4;
                cursor: pointer;
            }
    </style>

    @if (AbpSession.TenantId.HasValue && AbpSession.TenantId.Value == 3)
    {
        <link href="~/tenant-styles/sefa.css" rel="stylesheet" asp-append-version="true" />
    }

    @{
        await Html.RenderPartialAsync("~/Views/Shared/Favicon/_TenantFavicons.cshtml");
    }

</head>

<body>

    <div id="container" class="container">

        <div class="content">
            <h1>Oops!</h1>
            <h2>404 Page Not Found</h2>
            @if (AbpSession.TenantId.HasValue && AbpSession.TenantId.Value == 12)
            {
                <p>If you’re needing some help with this, please contact us:<br><br><strong>Phone: <a href="tel:+0875009950">087 500 9950</a> <br>Email: <a href="mailto:hloolosupport@finfind.co.za">hloolosupport@finfind.co.za</a></strong></p>
            }
            else
            {
                <p>If you’re needing some help with this, please contact us:<br><br><strong>Phone: <a href="tel:+0875009950">087 500 9950</a> <br>Email: <a href="mailto:info@finfind.co.za">info@finfind.co.za</a></strong></p>
            }
            <button id="error-button" onclick="goBack()" class="button">Go Back</button>

            <script>
                function goBack() {
                    window.history.back();
                }
            </script>

        </div>

    </div>

</body>
</html>
