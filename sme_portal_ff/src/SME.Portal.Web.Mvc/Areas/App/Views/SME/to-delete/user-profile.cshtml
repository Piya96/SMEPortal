@using SME.Portal.Web.Areas.App.Models.Common.Modals


<style>

    .pulse {
        overflow: visible;
        position: relative;
        z-index: 0 !important;
    }

        .pulse:before {
            content: '';
            display: block;
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            background-color: inherit;
            border-radius: inherit;
            transition: opacity 0.2s, transform 0.2s;
            animation: pulse-animation 1s cubic-bezier(0.24, 0, 0.38, 1) infinite;
            z-index: 0 !important;
        }

    @@keyframes pulse-animation {
        0% {
            opacity: 1;
            transform: scale(1);
        }

        50% {
            opacity: 0;
            transform: scale(1.5);
        }

        100% {
            opacity: 0;
            transform: scale(1.5);
        }

    }

    .pulse2 {
        overflow: visible;
        position: relative;
        z-index: 0 !important;
    }

    .pulse2:before {
        content: '';
        display: block;
        position: absolute;
        width: 80%;
        height: 90%;
        top: 5%;
        left: 10%;
        background-color: #5DA1FF;
        border-radius: inherit;
        transition: opacity 0.2s, transform 0.2s;
        animation: pulse-animation 1s cubic-bezier(0.24, 0, 0.38, 1) infinite;
        z-index: 0 !important;
    }

    .pulse2:hover {
        animation: none;
    }

    @@keyframes pulse2-animation {
        0% {
            opacity: 1;
            transform: scale(1);
        }

        50% {
            opacity: 0;
            transform: scale(1.4);
        }

        100% {
            opacity: 0;
            transform: scale(1.4);
        }
    }
</style>

<h4 class="mb-10 font-weight-bold text-dark">@L("OW_UserProfile")</h4>

<div id="id-user-info-message-div" style="display:none;">
    <div class="alert alert-custom alert-outline-primary fade show mb-5" role="alert">
        <div class="row">
            <div class="col-xl-1">
                <div class="alert-icon"><i class="flaticon-information"></i></div>
            </div>
            <div class="col-xl-7">
                <div class="alert-text">
                    <p>
                        If you’re the business owner, then you’ll only have to tell us who you are.
                        But if you’re looking for funding on behalf of the business owner, then we also need to know who you are.
                    </p>
                </div>
            </div>
            <div class="col-xl-4">
                <button id="id-user-info-message-button"
                        class="btn btn-outline-primary btn-sm mr-6"
                        type="button">
                    <i class="flaticon-edit"></i>
                    Click here to fill in your User Profile
                </button>
            </div>
        </div>
    </div>
</div>

<div id="id-user-profile-div">
    <div class="row">
        <div class="col-xl-12">
            <div class="form-group fv-plugins-icon-container">
                <label>@L("OW_IdentityNumber")</label>
                <div class="input-group">
                    <input
                           id="id-input-user-profile-identity-verify"
                           name="name-input-user-profile-identity-verify"
                           type="text"
                           class="form-control"
                           autocomplete="off"
                           placeholder="Enter a South African identity number and click Verify"
                           value="@Model.MySettings.IdentityOrPassport">

                    <div class="input-group-append">

                        <button
                                id="id-input-button-user-profile-identity-verify"
                                name="name-input-button-user-profile-identity-verify"
                                class="btn btn-primary font-weight-bold"
                                type="button">
                            <b class="la la-warning"></b>
                            <span
                                  id="id-input-button-span-user-profile-identity-verify"
                                  name ="name-input-button-span-user-profile-identity-verify">@L("OW_IdentityVerifyButton")
                            </span>
                        </button>

                    </div>

                </div>
                <div class="form-group fv-plugins-message-container"></div>
            </div>
        </div>
    </div>

    <div class="row" id="id-div-input-user-profile-mobile-verify" name="name-div-input-user-profile-mobile-verify">
        <div class="col-xl-12">
            <div class="form-group fv-plugins-icon-container">
                <label>@L("OW_Mobile")</label>
                <div class="input-group">
                    <input value="@Model.MySettings.PhoneNumber"
                           id="id-input-user-profile-mobile-verify"
                           type="text"
                           name="name-input-user-profile-mobile-verify"
                           class="form-control"
                           onwheel="this.blur()"
                           autocomplete="off"
                           placeholder="Enter your mobile number and click Verify">
                    <div class="input-group-append">
                        <button
                                id="id-input-button-user-profile-mobile-verify"
                                name="name-input-button-user-profile-mobile-verify"
                                class="btn btn-primary font-weight-bold"
                                type="button">
                            <b class="la la-warning"></b>
                            <span
                                  id="id-input-button-span-user-profile-mobile-verify"
                                  name="name-input-button-span-user-profile-mobile-verify">@L("OW_MobileVerifyButton")
                            </span>
                        </button>
                    </div>
                </div>
                <div class="fv-plugins-message-container"></div>
            </div>
        </div>
    </div>

    <div class="row" id="id-div-select-user-profile-mobile-verify" name="name-div-select-user-profile-mobile-verify">
        <div class="col-xl-12">
            <div class="form-group fv-plugins-icon-container">
                <label>@L("OW_Mobile")</label>
                <div class="input-group">
                    <select
                        value=""
                        id="id-select-user-profile-mobile-verify"
                        type="text"
                        name="name-select-user-profile-mobile-verify"
                        class="form-control">

                        <option value="" disabled selected hidden>Select mobile number</option>
                    </select>
                    <div class="input-group-append">
                        <button
                            id="id-select-button-user-profile-mobile-verify"
                            name="name-select-button-user-profile-mobile-verify"
                            class="btn btn-primary font-weight-bold"
                            type="button">

                            <b class="la la-warning"></b>
                            <span
                                  id="id-select-button-span-user-profile-mobile-verify"
                                  name="name-select-button-span-user-profile-mobile-verify">@L("OW_MobileVerifyButton")
                            </span>
                        </button>
                    </div>
                </div>
                <div class="fv-plugins-message-container"></div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-12">
            <div class="form-group fv-plugins-icon-container">
                <label>@L("OW_EmailAddr")</label>
                <input id="id-user-profile-email"
                       type="email"
                       class="form-control"
                       name="email1"
                       placeholder="Enter email"
                       value="@Model.MySettings.EmailAddress">
                <div class="fv-plugins-message-container"></div>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-xl-6">
            <div class="form-group fv-plugins-icon-container">
                <label>@L("OW_FirstName")</label>
                <input id="id-user-profile-fname"
                       type="text"
                       class="form-control"
                       name="fname1"
                       placeholder="Enter first name"
                       value="@Model.MySettings.Name">
                <div class="fv-plugins-message-container"></div>
            </div>
        </div>
        <div class="col-xl-6">
            <div class="form-group fv-plugins-icon-container">
                <label>@L("OW_LastName")</label>
                <input id="id-user-profile-lname"
                       type="text"
                       class="form-control"
                       name="lname1"
                       placeholder="Enter last name"
                       value="@Model.MySettings.Surname">
                <div class="fv-plugins-message-container"></div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-6">
            <div class="form-group fv-plugins-icon-container">
                <label>@L("OW_IsBusinessOwner")</label>
            </div>
        </div>
        <div class="col-xl-6">
            <div class="form-group fv-plugins-icon-container">
                <span class="switch switch-icon">
                    <label>
                        <input id="id-user-profile-owner"
                               type="checkbox"
                               name="userisowner1">
                        <span></span>
                    </label>
                </span>
            </div>
        </div>
        <div class="fv-plugins-message-container"></div>
    </div>

    <div id="id-user-profile-capacity-div">
        <div class="row">
            <div class="col-xl-6">
                <div class="form-group fv-plugins-icon-container">

                    <label>@L("OW_BusinessOwnerCapacityQuestion")</label>
                    <select id="id-user-profile-capacity-select"
                            name="capacity1"
                            class="form-control"
                            value="">
                        <option value="" disabled selected hidden>@L("OW_BusinessOwnerCapacitySelectOption")</option>
                        <option value="Director">@L("OW_CapacitySelectDirector")</option>
                        <option value="EmployeeOfOwner">@L("OW_CapacitySelectCompanyEmployee")</option>
                        <option value="Intermediary">@L("OW_CapacitySelectIntermediary")</option>
                        <option value="Other">@L("OW_CapacitySelectOther")</option>
                    </select>
                    <span class="form-text text-muted"></span>
                    <div class="fv-plugins-message-container"></div>

                </div>
            </div>
        </div>

        <div class="row" id="id-user-profile-capacity-other-div">
            <div class="col-xl-6">
                <div class="form-group fv-plugins-icon-container">
                    <label>@L("OW_BusinessOwnerCapacityOther")</label>
                    <input id="id-user-profile-capacity-input"
                           type="text"
                           class="form-control"
                           name="other1"
                           placeholder="Please enter your capacity">
                    <div class="fv-plugins-message-container"></div>
                </div>
            </div>
        </div>

    </div>

</div>
