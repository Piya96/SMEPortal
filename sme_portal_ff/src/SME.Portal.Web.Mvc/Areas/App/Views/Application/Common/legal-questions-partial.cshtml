</div>

<div id="div-own-or-rent-business-premises-ext">
    @{ await Html.RenderPartialAsync(
        "/Areas/App/Views/Common/Html/select-picker-n-lt-rt.cshtml",
        new Select_N_LT_RT()
        {
            Name = "own-or-rent-business-premises",
            Label = "Do you own or rent your business premises?"
        }
    );}
</div>

<div id="div-existing-insurance-policies-in-place-ext">
    @{ await Html.RenderPartialAsync(
        "/Areas/App/Views/Common/Html/radio-n-top.cshtml",
        new Radio_N_Top()
        {
            Name = "existing-insurance-policies-in-place",
            Label = "Do you have any existing business insurance policies in place?"
        }
    );}

    <div id="div-business-insurance-type"  class="form-group" style="display:none;">
        <label for="">Please select the business insurance you have</label>
        <br />
        <br />
        <div class="checkbox-list">
    
            @foreach(var listItem in Model.ListItems.Where(x => x.ParentListId == "64a52a3196d8da823f62da3a").OrderBy(x => x.Priority).ToList())
            {
                <label class="checkbox">
                    <input
                        type="checkbox"
                        value="@listItem.ListId"
                        name="check-business-insurance-type" />
                    <span>
                    </span>
                    @listItem.Name
                </label>
            }
    
