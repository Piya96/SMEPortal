            <div id="message-business-insurance-type" class="fv-plugins-message-container"></div>
        </div>
    
        <div id="div-business-insurance-other" class="form-group" style="display:none;">
            @{ await Html.RenderPartialAsync(
                 "/Areas/App/Views/Common/Html/input-n-lt-rt.cshtml",
                 new Input_N_LT_RT()
                 {
                     Name = "business-insurance-other",
                     Label = "Please list the business insurance you have"
                 }
            );}
        </div>
    
    </div>
<br/>
</div>

