@using SME.Portal.Web.Resources
@using SME.Portal.Web.Views.Shared.Components.TenantChange
@model TenantChangeViewModel
@inject IWebResourceManager WebResourceManager
@{
    WebResourceManager.AddScript(ApplicationPath + "view-resources/Views/Shared/Components/TenantChange/Default.js");
}
<span class="tenant-change-component">
    @L("CurrentTenant"):

    @if (Model.Tenant != null)
    {
        var name = Model.Tenant.Name;
        var tenancyName = Model.Tenant.TenancyName;
        if(Model.Tenant.TenancyName == "SEFA")
        {
            name = "sefa";
            tenancyName = "sefa";
        }
        <span title="@name"><strong>@tenancyName</strong></span>
    }
    else
    {
        <span>@L("NotSelected")</span>
    }

    (<a href="#">@L("Change")</a>)
</span>