
@using SME.Portal.Web.Areas.App.Models.Common.Modals
@using SME.Portal.Web.Areas.App.Models.OwnerCompanyMapping
@model OwnerCompanyMapViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Details")))

<div class="modal-body">
    <div id="OwnerCompanyMapInformationsTab">
        
        <div class="row">
            <div class="col-6 mb-3">
                <h6>@L("IsPrimaryOwner") :</h6>
                @Model.OwnerCompanyMap.IsPrimaryOwner
            </div>

            <div class="col-6 mb-3">
                <h6>(@L("Owner")) @L("IdentityOrPassport") :</h6>
                @Model.OwnerIdentityOrPassport
            </div>
            <div class="col-6 mb-3">
                <h6>(@L("SmeCompany")) @L("RegistrationNumber") :</h6>
                @Model.SmeCompanyRegistrationNumber
            </div>

        </div>

    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithClose.cshtml")

