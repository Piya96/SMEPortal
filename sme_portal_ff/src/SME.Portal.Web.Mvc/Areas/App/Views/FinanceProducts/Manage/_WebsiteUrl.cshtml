@using SME.Portal.Authorization
@using SME.Portal.Web.Areas.App.Models.FinanceProducts
@using SME.Portal.Web.Areas.App.Startup
@model IManageView

<script src="~/view-resources/Areas/App/Views/FinanceProducts/Manage/Manage.js"></script>
<form id="stepWebsitesURLsForm">
    @if (Model.BaseModelType.Equals("ManageFinanceProductViewModel"))
    {
        <div class="step" id="stepWebsitesURLs">
            <h3>Websites URLs</h3>
        <div class="card card-info mb-10">
            <div class="card-body">
                <div class="row">
                    <div class="col-1 card-icon">
                        <i class="fa fa-info-circle"></i>
                    </div>
                    <div class="col">
                        Manage all website URLs for this financial product. These URLs will be used for automated update checks, and the primary URL will be displayed to the SMME.
                    </div>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group row">
                <div class="col-md-12" style="padding-left:18px">
                    <form asp-controller="FinanceProducts">
                        <div id="websiteUrlList">
                            <partial name="../../FinanceProducts/_WebsiteUrlsList.cshtml" model="@Model"></partial>
                        </div>
                    </form>
                    <div class="d-flex mb-10">
                        <div>
                            <input type="text" class="form-control" name="websiteUrl" id="websiteUrl" placeholder="Enter website URL." style="float: left;padding-right: 25px;min-width:300px;" />
                        </div>
                        <div class="d-flex align-items-center" style="margin-inline:20px">
                            <label class="mb-1 mr-2" for="isPrimary">Primary</label>
                            <input type="checkbox" name="isPrimary" id="isPrimary" value="true" style="padding-right: 25px;" />
                        </div>
                        <div>
                            <button type="button" onclick="addWebsiteUrl()" class="btn btn-primary text-nowrap">Add Website URL</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    }
    else if (Model.BaseModelType.Equals("ManageFundFormsViewModel"))
    {
        <div class="step" id="stepWebsitesURLsFundForm">
            <h3>Websites URLs</h3>
            <div class="card card-info mb-10">
                <div class="card-body">
                    <div class="row">
                        <div class="col-1 card-icon">
                            <i class="fa fa-info-circle"></i>
                        </div>
                        <div class="col">
                            Manage all website URLs for this financial product. These URLs will be used for automated update checks, and the primary URL will be displayed to the SMME.
                        </div>
                    </div>
                </div>
            </div>
                <div class="form-group row">
                    <div class="col-md-12" style="padding-left:18px">
                        <label asp-for="@Model.FinanceProduct.FundWebsiteAddress" class="col-md-4 col-form-label">Fund Website Address</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="fundWebsiteAddress" autofocus asp-for="@Model.FinanceProduct.FundWebsiteAddress" placeholder="Enter fundform website URL.">
                            <span asp-validation-for="@Model.FinanceProduct.FundWebsiteAddress" class="text-danger"></span>
                        </div>
                    </div>
                </div>
        </div>
    }
</form>