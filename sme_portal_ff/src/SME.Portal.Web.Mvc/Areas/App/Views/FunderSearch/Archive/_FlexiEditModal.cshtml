@using System.Globalization
@using SME.Portal.Web.Areas.App.Models.Common.Modals
@using SME.Portal.Web.Areas.App.Models.FunderSearch

@model FlexiEditViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("FlexiEdit")) : L("Application")))

<div class="modal-body">

    <div id="id-appication-matching-flexi-edit-modal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">
                        <span>Application Edit</span>
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        <i aria-hidden="true" class="ki ki-close"></i>
                    </button>
                </div>


                <div class="modal-body">

                    <div class="form-group col-12">
                        <label for="permission">Loan Amount</label>
                        <div class="form-group mb-2">
                            <div class="input-group">
                                <input type="text"
                                       id="id-appication-matching-modal-loan-amount-input"
                                       class="form-control"
                                       name="loanamount"
                                       placeholder="Enter loan amount" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-12">
                        <label for="permission">Annual Turnover</label>
                        <div class="form-group mb-2">
                            <div class="input-group">
                                <input type="text"
                                       id="id-appication-matching-modal-annual-turnover-input"
                                       class="form-control"
                                       name="annualturnover"
                                       placeholder="Enter annual turnover" />
                            </div>
                        </div>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-light-primary font-weight-bold close-button" data-dismiss="modal">@L("Cancel")</button>
                    <button id="id-modal-save" type="button" class="btn btn-primary save-button"><i class="fa fa-save"></i> <span>@L("Save")</span></button>
                </div>

            </div>
        </div>
    </div>

</div>
