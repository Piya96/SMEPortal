
@{
    var _LoginReg = ViewBag.IsRegImage;
    string imagePath = "";

    switch (_LoginReg)
    {
        case true:
            imagePath = "/view-resources/Views/Account/images/asides/AB-FINFIND_Login_v3.jpg";
            break;
        case false:
            imagePath = "/view-resources/Views/Account/images/asides/AB-FINFIND_Login_v1.jpg";
            break;
        default:
            imagePath = "/view-resources/Views/Account/images/asides/AB-FINFIND_Login_v2.jpg";
            break;
    }
}


<div class="login-aside d-flex flex-column flex-row-auto">
    <img src="@imagePath" usemap="#image-map" />
        <map name="image-map">
            <area target="_blank"
                  alt="Eastern Cape Development Corporation"
                  title="Eastern Cape Development Corporation"
                  href="https://finfind.co.za"
                  coords="99,140,441,43"
                  shape="rect" />
        </map>
</div>
